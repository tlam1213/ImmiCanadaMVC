                        <div class="count-like">@News[1].NumberOfLike</div>
                        <div class="count-message">999</div>
                    </div>
                </div>
            </div>
            <div class="row right-banner mar-top15px">
                <div class="col-4 remove-paddingleft remove-paddingright"><img src="@News[2].Base64Image" class="full-width" /></div>
                <div class="col-8 remove-paddingleft">
                    <div class="new-item-main-title-left pad-left15px pad-top15px pad-bot10px">@News[2].Title</div>
