@model IEnumerable<ImmiCanada.Entities.Work>

@{
    ViewBag.Title = "CanadaVisa CMS";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .width-short-column {
        width: 130px;
    }
    .width-long-column {
        width: 170px;
    }
</style>

<p>
    @Html.ActionLink("Thêm mới việc làm", "Create")
</p>
<table class="table">
    <tr>
        <th class="width-short-column">
            Chương trình
        </th>
        <th class="width-short-column">
            NOC
        </th>
        <th class="width-short-column">
            Mức lương
        </th>
        <th class="width-short-column">
            Kinh nghiệm
        </th>
        <th class="width-short-column">
            Chức vụ
        </th>
        <th class="width-long-column">
            Yêu cầu bằng cấp
        </th>
        <th class="width-long-column">
            Hình thức làm việc
        </th>
        <th class="width-long-column">
            Số lượng cần tuyển
        </th>
        <th class="width-short-column">
            Giới tính
        </th>
        <th class="width-long-column">
            Yêu cầu bằng cấp
        </th>
        <th class="width-long-column">
            Yêu cầu độ tuổi
        </th>
        <th class="width-short-column">
            Hình ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImmigrationService.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Noc.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Income)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRecruitments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occupation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>            
            <td>
                @if (@item.Base64Image.Length != 0)
                {
                    <img width="100" height="100" src="@item.Base64Image" />
                }
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.WorkId }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.WorkId })
            </td>
        </tr>
    }

</table>
